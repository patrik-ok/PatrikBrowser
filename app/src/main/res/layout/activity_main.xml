<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <ScrollView
        android:id="@+id/scrollView_homepage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/vmargin48dp"
        android:visibility="gone">

    </ScrollView>
    <!--height must match_parent,or will be blank appearence.(#patrik)2017/1/21.-->
    <com.patrik.browser.view.CustomWebview
        android:id="@+id/webview_homepage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="@dimen/vmargin48dp">

    </com.patrik.browser.view.CustomWebview>

    <FrameLayout
        android:id="@+id/pop_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/vmargin48dp"
        android:background="@color/color_5f000000"
        android:orientation="vertical"
        android:visibility="invisible" />

    <ViewStub
        android:id="@+id/main_view_stub_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vheight48dp"
        android:layout_gravity="bottom"
        android:layout="@layout/view_main_bottom_one" />

    <ViewStub
        android:id="@+id/main_view_stub_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vheight48dp"
        android:layout_gravity="bottom"
        android:layout="@layout/view_main_bottom_two" />
</FrameLayout>
